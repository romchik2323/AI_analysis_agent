```json
{
  "mcpServers": {
    "churn-analyzer": {
      "command": "C:\\Users\\–í–∞—à–µ–ò–º—è\\churn-analysis-agent\\venv\\Scripts\\python.exe",
      "args": ["C:\\Users\\–í–∞—à–µ–ò–º—è\\churn-analysis-agent\\mcp_server.py"],
      "env": {
        "ANTHROPIC_API_KEY": "sk-ant-–≤–∞—à-–∫–ª—é—á"
